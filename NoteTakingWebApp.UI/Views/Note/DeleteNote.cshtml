@{
    ViewBag.Title = "Delete note";
}

@model NoteDto

<h3>Delete note</h3>
<h4>Are you sure you want to delete this note?</h4>

<form method="post">
    <div class="form-floating mb-3">
        <input type="submit" class="btn btn-outline-danger" 
            asp-controller="Note" asp-action="DeleteNoteDto" value="Delete">
        <a asp-controller="Home" asp-action="Home" class="btn btn-outline-dark">Back</a>
    </div>
    <div class="form-floating mb-3">
        <input type="hidden" asp-for="Id" value="@Model.Id">
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingTitle"
               placeholder="Title" asp-for="Title" value="@Model.Title" disabled>
        <label for="floatingTitle">Title</label>
    </div>
    <div class="form-floating">
        <textarea style="height: 200px" class="form-control" id="floatingContent"
                  placeholder="Content" asp-for="Content" disabled>@Model.Content</textarea>
        <label for="floatingContent">Content</label>
    </div>
</form>
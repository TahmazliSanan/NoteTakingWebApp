@{
    ViewBag.Title = "My notes";
}

@model IEnumerable<NoteDto>

<h3>My notes</h3>

<div class="form-floating mb-3">
    <a asp-controller="Home" asp-action="Home" class="btn btn-dark">Back</a>
</div>

@{
    if (Model.Count() > 0)
    {
        <table class="table table-striped text-center">
            <tr>
                <th>Title</th>
                <th>D / E / R</th>
            </tr>
            @{
                foreach (var note in Model)
                {
                    <tr>
                        <td>
                            @note.Title
                        </td>
                        <td colspan="3">
                            <a class="btn btn-info" asp-controller="Note"
                               asp-action="GetNoteById" asp-route-id="@note.Id">Details</a>
                            &nbsp;
                            <a class="btn btn-success" asp-controller="Note"
                               asp-action="UpdateNote" asp-route-id="@note.Id">Edit</a>
                            &nbsp;
                            <a class="btn btn-danger" asp-controller="Note"
                               asp-action="DeleteNote" asp-route-id="@note.Id">Remove</a>
                        </td>
                    </tr>
                }
            }
        </table>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            There are no notes. Create your first note!
            <br>
            <a class="btn btn-primary" asp-controller="Note" asp-action="CreateNote">Create one</a>
        </div>
    }
}